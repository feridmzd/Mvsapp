@model List<Services>
@{
    var count = 0;
}
<h2>
    Services
    <a class="btn btn-primary" asp-action="Create">Create</a>
</h2>
<div class="container">

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Img</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <div style="width:100px">

                            <img width="100%" src="~/Upload/Service/@item.ImgUrl">
                        </div>
                    </td>
                    <td>
                        <a class="btn btn-secondary" asp-action="Update" asp-route-id=@item.Id>Update</a>
                        <a class="btn btn-danger item-delete" asp-action="Delete" asp-route-id=@item.Id>Delete</a>


                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
